h1
  | Sign Up
= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      .alert.alert-danger
        ul
          - for message in @user.errors.full_messages
            li
              = message
  p
    = f.text_field :first_name, class: 'form-control', placeholder: 'First name'
  p
    = f.text_field :last_name, class: 'form-control', placeholder: 'Last name'
  p
    = f.text_field :birthday, class: 'form-control', placeholder: 'Birthday'
  p
    = f.text_field :username, class: 'form-control', placeholder: 'Username', required:''
  p
    = f.text_field :email, class: 'form-control', placeholder: 'E-mail', required:''
  p
    = f.password_field :password, class: 'form-control', placeholder: 'Password', required:''
  p
    = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', required:''
  = f.submit 'Create user' , class: 'btn btn-lg btn-primary btn-block'
